<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>OAuthImplement.home</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthCodeURL</servlet-name>
        <servlet-class>OAuthImplement.AuthCodeURL</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>AuthCodeURL</servlet-name>
        <url-pattern>/AuthCodeURL</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>OAuthClient</servlet-name>
        <servlet-class>OAuthImplement.OAuthClient</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>OAuthClient</servlet-name>
        <url-pattern>OAuthClient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TokenInfo</servlet-name>
        <servlet-class>OAuthImplement.TokenInfo</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>TokenInfo</servlet-name>
        <url-pattern>/TokenInfo</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>JSON</servlet-name>
        <servlet-class>OAuthImplement.JSON</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>JSON</servlet-name>
        <url-pattern>/JSON</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserInfo</servlet-name>
        <servlet-class>OAuthImplement.UserInfo</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>UserInfo</servlet-name>
        <url-pattern>/UserInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Introspection</servlet-name>
        <servlet-class>OAuthImplement.Introspection</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>Introspection</servlet-name>
        <url-pattern>/Introspection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TokenVerifier</servlet-name>
        <servlet-class>OAuthImplement.TokenVerifier</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>TokenVerifier</servlet-name>
        <url-pattern>/TokenVerifier</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TokenVerifier</servlet-name>
        <servlet-class>OAuthImplement.TokenVerifier</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>TokenVerifier</servlet-name>
        <url-pattern>/TokenVerifier</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProtectedResource</servlet-name>
        <servlet-class>OAuthImplement.ProtectedResource</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>ProtectedResource</servlet-name>
        <url-pattern>/ProtectedResource</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccessResource</servlet-name>
        <servlet-class>OAuthImplement.AccessResource</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>AccessResource</servlet-name>
        <url-pattern>/AccessResource</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ResourceFilter</filter-name>
        <filter-class>OAuthImplement.Filters.ResourceFilter</filter-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>admin</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ResourceFilter</filter-name>
        <url-pattern>/ProtectedResource</url-pattern>
        <!--<dispatcher>FORWARD</dispatcher>-->
        <!--<dispatcher>REQUEST</dispatcher>-->
        <!--<dispatcher>INCLUDE</dispatcher>-->
    </filter-mapping>

</web-app>
